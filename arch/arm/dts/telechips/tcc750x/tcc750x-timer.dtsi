		id = <3>;
		width = <16>;
		interrupts = <GIC_SPI 20 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer4: timer4@1E030040 {
		compatible = "telechips,timer";
		reg = <0x1E030040 0x10>;
		id = <4>;
		width = <20>;
		interrupts = <GIC_SPI 21 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer5: timer5@1E030050 {
		compatible = "telechips,timer";
		reg = <0x1E030050 0x10>;
		id = <5>;
		width = <20>;
		interrupts = <GIC_SPI 22 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};
};
