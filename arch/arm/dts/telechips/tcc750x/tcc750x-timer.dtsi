/ {
	tcc_timer0: timer0@1E030000 {
		compatible = "telechips,timer";
		reg = <0x1E030000 0x10>;
		id = <0>;
		width = <16>;
		interrupts = <GIC_SPI 17 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
	};

	tcc_timer1: timer1@1E030010 {
		compatible = "telechips,timer";
		reg = <0x1E030010 0x10>;
		id = <1>;
		width = <16>;
		interrupts = <GIC_SPI 18 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer2: timer2@1E030020 {
