/ {
	tcc_timer0: timer0@14300000 {
		compatible = "telechips,timer";
		reg = <0x14300000 0x10>;
		id = <0>;
		width = <16>;
		interrupts = <GIC_SPI 33 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
	};

	tcc_timer1: timer1@14300010 {
		compatible = "telechips,timer";
		reg = <0x14300010 0x10>;
		id = <1>;
		width = <16>;
		interrupts = <GIC_SPI 34 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer2: timer2@14300020 {
