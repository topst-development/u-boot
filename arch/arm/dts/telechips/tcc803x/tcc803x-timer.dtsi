		reg = <0x14300030 0x10>;
		id = <3>;
		width = <16>;
		interrupts = <GIC_SPI 36 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer4: timer4@14300040 {
		compatible = "telechips,timer";
		reg = <0x14300040 0x10>;
		id = <4>;
		width = <20>;
		interrupts = <GIC_SPI 37 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};

	tcc_timer5: timer5@14300050 {
		compatible = "telechips,timer";
		reg = <0x14300050 0x10>;
		id = <5>;
		width = <20>;
		interrupts = <GIC_SPI 38 0>;
		clocks = <&clk_peri PERI_TCT>;
		clock-frequency = <12000000>;
		status = "disabled";
	};
};
