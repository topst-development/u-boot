	prompt "Error: only 1 dual LVDS can be connected"
	default DC2_LIMITED_LVDS_DUAL_LCD_PATH
	depends on ( DISPLAY_OUTPUT_PATH_DC2 ) && ( DC2_DUAL_PORT_LVDS ) && ( DC0_DUAL_PORT_LVDS || DC1_DUAL_PORT_LVDS )

	config DC2_LIMITED_LVDS_DUAL_LCD_PATH
	bool ""
	depends on ( DC2_DUAL_PORT_LVDS ) && ( DC0_DUAL_PORT_LVDS || DC1_DUAL_PORT_LVDS )
endchoice

choice
	prompt "Select LCD path for single LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC2 ) && ( DC2_SINGLE_PORT_LVDS )

config DC2_SINGLE_LVDS_LCD_PATH_0
	bool "TS MUX0 -> LVDS Port0"
	depends on ( DC2_SINGLE_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_0 && !DC1_SINGLE_LCD_PATH_0 )
config DC2_SINGLE_LVDS_LCD_PATH_1
	bool "TS MUX1 -> LVDS Port1"
	depends on ( DC2_SINGLE_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_1 && !DC1_SINGLE_LCD_PATH_1 )
config DC2_SINGLE_LVDS_LCD_PATH_2
	bool "TS MUX2 -> LVDS Port2"
	depends on ( DC2_SINGLE_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_2 && !DC1_SINGLE_LCD_PATH_2 )
endchoice


#
# Configure Display controller 3
#
config DISPLAY_OUTPUT_PATH_DC3
	bool "Display controller 3 path configuration"
	default n
	depends on TCC_FB && TCC805X

choice
	prompt "Select LCD Panel on Display controller 3"
	default DC3_DP_DISPLAY_DEVICE
	depends on DISPLAY_OUTPUT_PATH_DC3

config DC3_LCD_FLD0800
	bool "FLD0800( Single ): 1024 * 600 LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && LCD_FLD0800 )
config DC3_LCD_SLVDS_SAMPLE
	bool "SLVDS SAMPLE( Single ): 1024 * 600 LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && LCD_SLVDS_SAMPLE )
config DC3_LCD_SLVDS_EXT
	bool "SLVDS EXT( Single ): 1024 * 600 LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && LCD_SLVDS_EXT )
config DC3_LCD_TM123XDHP90
	bool "TM123XDHP90( Dual ): 1920 * 720 LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && LCD_TM123XDHP90 )
config DC3_LCD_HSD123KPW2_SERDES
	bool "HSD123KPW2_SERDES( Dual ): 1920 * 720 LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && LCD_HSD123KPW2_SERDES )
config DC3_DP_DISPLAY_DEVICE
	bool "DP display device"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && TCC_DISPLAY_PORT )
endchoice

config DC3_DP_OUTPUT_VIC
	int "Video Identification Code for DP output timing(O is to read EDID)"
	range 1 1030
	default 4
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_DP_DISPLAY_DEVICE && !DP_PANEL_MODE )
	help
		When programmed to 0, driver will read EDID.
		Otherwise, driver will configure video timing parameters based on video code programmed.

choice
	prompt "Dual Port LVDS Type selected"
	default DC3_DUAL_PORT_LVDS
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_LCD_TM123XDHP90 || DC3_LCD_HSD123KPW2_SERDES )

config DC3_DUAL_PORT_LVDS
	bool "DUAL PORT LVDS TYPE"
	depends on ( DC3_LCD_TM123XDHP90 || DC3_LCD_HSD123KPW2_SERDES )
endchoice

choice
	prompt "Single Port LVDS Type selected"
	default DC3_SINGLE_PORT_LVDS
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_LCD_FLD0800 || DC3_LCD_SLVDS_SAMPLE || DC3_LCD_SLVDS_EXT )

config DC3_SINGLE_PORT_LVDS
	bool "SINGLE PORT LVDS TYPE"
	depends on ( DC3_LCD_FLD0800 || DC3_LCD_SLVDS_SAMPLE || DC3_LCD_SLVDS_EXT )
endchoice

choice
	prompt "Select LCD Mux path"
	default DC3_LCD_MUX1 if TCC805X
	default DC3_LCD_MUX3 if !TCC805X
	depends on ( DISPLAY_OUTPUT_PATH_DC3 )

config DC3_LCD_MUX0
	bool "DEV0_PATH"
	depends on ( !DC0_LCD_MUX0 && !DC1_LCD_MUX0 && !DC2_LCD_MUX0 )
config DC3_LCD_MUX1
	bool "DEV1_PATH"
	depends on ( !DC0_LCD_MUX1 && !DC1_LCD_MUX1 && !DC2_LCD_MUX1 )
config DC3_LCD_MUX2
	bool "DEV2_PATH( Use SDM )"
	depends on ( !DC0_LCD_MUX2 && !DC1_LCD_MUX2 && !DC2_LCD_MUX2 )
config DC3_LCD_MUX3
	bool "DEV3_PATH( Use SRVC )"
	depends on ( !DC0_LCD_MUX3 && !DC1_LCD_MUX3 && !DC2_LCD_MUX3 )
endchoice

config DC3_SDM_BYPASS
	bool "Bypass SDM path"
	default n
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && DC3_LCD_MUX2 )
        help
		This property makes a Bypasson SDM path in TCC805x CS.
		This property makes a Bypasson SDM path in TCC805x CS.

config DC3_SRVC_BYPASS
	bool "Bypass SRVC path"
	default n
	depends on ( DISPLAY_OUTPUT_PATH_DC3 && DC3_LCD_MUX3 )
        help
		This property makes a Bypasson SRVC path in TCC805x CS.
		This property makes a Bypasson SRVC path in TCC805x CS.

choice
	prompt "Select tcc805x EVB LCD panel power supply connector"
	default DC3_LCD_POWER4
	depends on ( DISPLAY_OUTPUT_PATH_DC3 )

config DC3_LCD_POWER1
	bool "DISPLAY POWER1"
	depends on ( !DC0_LCD_POWER1 && !DC1_LCD_POWER1 && !DC2_LCD_POWER1 )
config DC3_LCD_POWER2
	bool "DISPLAY POWER2"
	depends on ( !DC0_LCD_POWER2 && !DC1_LCD_POWER2 && !DC2_LCD_POWER2 )
config DC3_LCD_POWER3
	bool "DISPLAY POWER3"
	depends on ( !DC0_LCD_POWER3 && !DC1_LCD_POWER3 && !DC2_LCD_POWER3 )
config DC3_LCD_POWER4
	bool "DISPLAY POWER4 (tcc8050, tcc8053)"
	depends on ( !DC0_LCD_POWER4 && !DC1_LCD_POWER4 && !DC2_LCD_POWER4 )
config DC3_LCD_NC
	bool "DISPLAY POWER NOT Connected"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 )
endchoice

choice
	prompt "Dual LCD path: TS MUX0 & 1 and LVDS Port0 &1 are reserved"
	default DC3_LVDS_DUAL_LCD_PATH
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_DUAL_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS && !DC2_DUAL_PORT_LVDS )

	config DC3_LVDS_DUAL_LCD_PATH
	bool "(TS MUX0- > LVDS Port0) + (TS MUX1 -> LVDS Port1)"
	depends on ( DC3_DUAL_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS && !DC2_DUAL_PORT_LVDS )
endchoice

choice
	prompt "Error: only 1 dual LVDS can be connected"
	default DC3_LIMITED_LVDS_DUAL_LCD_PATH
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_DUAL_PORT_LVDS ) && ( DC0_DUAL_PORT_LVDS || DC1_DUAL_PORT_LVDS || DC2_DUAL_PORT_LVDS )

	config DC3_LIMITED_LVDS_DUAL_LCD_PATH
	bool ""
	depends on ( DC3_DUAL_PORT_LVDS ) && ( DC0_DUAL_PORT_LVDS || DC1_DUAL_PORT_LVDS || DC2_DUAL_PORT_LVDS )
endchoice

choice
	prompt "Select LCD path for single LVDS"
	depends on ( DISPLAY_OUTPUT_PATH_DC3 ) && ( DC3_SINGLE_PORT_LVDS )

config DC3_SINGLE_LVDS_LCD_PATH_0
	bool "TS MUX0 -> LVDS Port0"
	depends on ( DC3_SINGLE_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS && !DC2_DUAL_PORT_LVDS && !DC3_DUAL_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_0 && !DC1_SINGLE_LCD_PATH_0 && !DC2_SINGLE_LVDS_LCD_PATH_0)
config DC3_SINGLE_LVDS_LCD_PATH_1
	bool "TS MUX1 -> LVDS Port1"
	depends on ( DC3_SINGLE_PORT_LVDS ) && ( !DC0_DUAL_PORT_LVDS && !DC1_DUAL_PORT_LVDS && !DC2_DUAL_PORT_LVDS && !DC3_DUAL_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_1 && !DC1_SINGLE_LCD_PATH_1 && !DC2_SINGLE_LVDS_LCD_PATH_1 )
config DC3_SINGLE_LVDS_LCD_PATH_2
	bool "TS MUX2 -> LVDS Port2"
	depends on ( DC3_SINGLE_PORT_LVDS ) && ( !DC0_SINGLE_LCD_PATH_2 && !DC1_SINGLE_LCD_PATH_2 && !DC2_SINGLE_LVDS_LCD_PATH_2 )
endchoice


config DC0_LCD_DEVICE
	string
	default "FLD0800" if DC0_LCD_FLD0800
	default "SLVDS_SAMPLE" if DC0_LCD_SLVDS_SAMPLE
	default "SLVDS_EXT" if DC0_LCD_SLVDS_EXT
	default "TM123XDHP90" if DC0_LCD_TM123XDHP90
	default "HSD123KPW2" if DC0_LCD_HSD123KPW2_SERDES
	default "DPV14" if DC0_DP_DISPLAY_DEVICE
	default "HDMIV20" if DC0_LCD_HDMIV20

config DC0_DISP_LCD_MUX
	int
	default 0 if DC0_LCD_MUX0
	default 1 if DC0_LCD_MUX1
	default 2 if DC0_LCD_MUX2
	default 3 if DC0_LCD_MUX3

config DC0_DISP_LVDS_LCD_PORT
	int
	default 2 if ( DC0_SINGLE_PORT_LVDS && DC0_SINGLE_LCD_PATH_0 )
	default 3 if ( DC0_SINGLE_PORT_LVDS && DC0_SINGLE_LCD_PATH_1 )
	default 0 if ( DC0_SINGLE_PORT_LVDS && DC0_SINGLE_LCD_PATH_2 )
	default 4 if ( DC0_DUAL_PORT_LVDS )

config DC0_DISP_LCD_POWER
	int
	default 0 if DC0_LCD_POWER1
	default 1 if DC0_LCD_POWER2
	default 2 if DC0_LCD_POWER3
	default 3 if DC0_LCD_POWER4
	default 4 if DC0_LCD_NC

